{
  "name": "markdown-elearnjs",
  "version": "1.2.12",
  "description": "Simple markdown conversion to elearn.js based HTML and PDF.",
  "main": "out/main.js",
  "typings": "out/main.d.ts",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && nyc mocha --recursive --colors --require ts-node/register -u tdd src/test/**/*.test.ts",
    "testXUnit": "npm run compile && multi='spec=- xunit=test-report.xml' nyc mocha --require ts-node/register --retries 1 -u tdd -R mocha-multi **/*.test.ts",
    "prepublishOnly": "npm run compile"
  },
  "keywords": [
    "Markdown",
    "elearnjs",
    "elearn.js",
    "html",
    "pdf",
    "digital",
    "paper"
  ],
  "author": "Arne Westphal",
  "repository": "https://github.com/elb-min-uhh/markdown-elearnjs",
  "license": "MIT",
  "dependencies": {
    "html-pdf": "^2.2.0",
    "ncp": "^2.0.0",
    "path": "^0.12.7",
    "showdown": "^1.8.6"
  },
  "devDependencies": {
    "@types/html-pdf": "^2.1.2",
    "@types/mocha": "^5.2.5",
    "@types/ncp": "^2.0.1",
    "@types/node": "^10.5.7",
    "@types/rimraf": "^2.0.2",
    "mocha": "^5.2.0",
    "mocha-multi": "^1.0.1",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.0",
    "typescript": "^3.0.1"
  },
  "nyc": {
    "check-coverage": false,
    "per-file": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/test/**/*.ts",
      "node_modules",
      "types"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov"
    ],
    "report-dir": "./coverage",
    "sourceMap": true,
    "instrument": true
  }
}
