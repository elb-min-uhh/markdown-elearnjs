{
  "name": "markdown-elearnjs",
  "version": "1.7.2",
  "description": "Simple markdown conversion to elearn.js based HTML and PDF.",
  "main": "out/main.js",
  "typings": "out/index",
  "scripts": {
    "compile": "tsc -p ./ && node scripts/postcompile.js",
    "createDocumentation": "./node_modules/.bin/typedoc --options scripts/typedoc.js && node scripts/cleandocumentation.js",
    "watch": "tsc -watch -p ./",
    "test": "nyc mocha --recursive --colors --require ts-node/register -u tdd **/*.test.ts",
    "testXUnit": "nyc mocha --require ts-node/register --retries 1 -u tdd -R mocha-multi --reporter-options spec=-,xunit=test-report.xml **/*.test.ts",
    "prepare": "node scripts/prepublish.js && npm run compile"
  },
  "keywords": [
    "Markdown",
    "elearnjs",
    "elearn.js",
    "html",
    "pdf",
    "digital",
    "paper"
  ],
  "author": "Arne Westphal",
  "repository": "https://github.com/elb-min-uhh/markdown-elearnjs",
  "license": "MIT",
  "dependencies": {
    "@types/puppeteer": "^1.10.0",
    "ncp": "^2.0.0",
    "path": "^0.12.7",
    "puppeteer": "^1.10.0",
    "showdown": "^1.9.0",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/ncp": "^2.0.1",
    "@types/node": "^10.12.5",
    "@types/rimraf": "^2.0.2",
    "@types/underscore": "^1.8.9",
    "dts-bundle": "^0.7.3",
    "mocha": "^5.2.0",
    "mocha-multi": "^1.0.1",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6"
  },
  "nyc": {
    "check-coverage": false,
    "per-file": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/test/**/*.ts",
      "node_modules",
      "types"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov"
    ],
    "report-dir": "./coverage",
    "sourceMap": true,
    "instrument": true
  }
}
